<!-- Frenzy's Totally not Stolen from rayes0 eww configuration -->

<eww>
	<includes>
        <file path="./variables.xml"/>
        <file path="./modules/power-side.xml"/>
        <file path="./modules/hub-side.xml"/>
        <file path="./modules/music-task-side.xml"/>
	</includes>


    <windows>
    <!-- These are the windows -->


    <!-- Power Options Bar [ window thingy ] -->
    <window name="rightSidebar" screen="0" exclusive="true" stacking="bg">
        <geometry anchor="center right" x="0px" y="0px" width="100px" height="45%"/>
        <reserve side="top" distance="4%" layer="top"/>
        <widget>
            <righty/>
        </widget>
    </window>


    <!-- Nice Top Interfase thingy -->
    <window name="topSidebar" screen="0">
        <geometry anchor="center bottom" x="0px" y="0px" width="44%" height="200px"/>
        <reserve side="top" distance="4%" layer="top"/>
        <widget>
                <topty/>
        </widget>
    </window>
   

    <!-- Left Todo List interfase thing -->
    <window name="leftSidebar" screen="0" >
        <geometry anchor="center left" x="0px" y="0px" width="400px" height="82%" exclusive="true"/>
        <reserve side="top" distance="4%" layer="top"/>
        <widget>
            <lefty/> <!--This 7is the def we created earlier-->
        </widget>
    </window>


    <!-- Hub -->


    </windows>
</eww>
